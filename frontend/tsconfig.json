{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "jsx": "react",
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "composite": true, // Set to true for composite projects
    "declaration": true // Generate declaration files
  },
  "include": [
    "src/**/*" // Ensure it includes all files in src
  ]
}
